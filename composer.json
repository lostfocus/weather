{
  "name": "lostfocus/weather",
  "type": "library",
  "description": "Weather development library",
  "homepage": "https://github.com/lostfocus/jf2",
  "license": "MIT",
  "authors": [
    {
      "name": "Dominik Schwind",
      "email": "dschwind@lostfocus.de",
      "homepage": "https://lostfocus.de",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "8.0.*|8.1.*",
    "ext-json": "*",
    "php-http/client-implementation": "^1.0",
    "php-http/message-factory": "^1.0.2",
    "php-http/discovery": "^1.4"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.6",
    "phpunit/phpunit": ">=8.0"
  },
  "autoload": {
    "psr-4": {
      "Lostfocus\\Weather\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lostfocus\\Weather\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "lock": false,
    "sort-packages": true
  }
}